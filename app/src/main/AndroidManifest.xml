<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nfhackathon.botb.rpt" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.RPTActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".utils.LifecycleLoggingActivity"
            android:label="@string/title_activity_lifecycle_logging" >
        </activity>
        <activity
            android:name=".activities.DecisionActivity"
            android:label="@string/title_activity_decision" >
        </activity>
        <activity
            android:name=".activities.ResultsActivity"
            android:label="@string/title_activity_results" >
        </activity>
    </application>

</manifest>
